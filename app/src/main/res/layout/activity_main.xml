<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash">

    <com.example.orf.FullScreenVideoView
        android:id="@+id/backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        app:layout_collapseMode="parallax"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <FrameLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Top-left image -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="411dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:foregroundGravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="280dp"
            android:src="@drawable/image__1_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Top-right image -->
        <ImageView
            android:id="@+id/logo_right"
            android:layout_width="411dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:foregroundGravity="right"
            android:paddingRight="10dp"
            android:paddingLeft="280dp"
            android:src="@drawable/image__1_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginRight="10dp"
            android:shadowColor="#000000"
            android:shadowDx="6"
            android:shadowDy="5"
            android:shadowRadius="6"
            android:text="OUTREACH  FACILITY  \     TEOG \nJeedimetla"
            android:textColor="#FFFFFF"
            android:textSize="43dp"
            android:textStyle="bold"
             />

    </FrameLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="#FFEB3B"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#00FFFFFF">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="5"
                android:layout_marginTop="360dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_top_corners"
                android:minHeight="600dp">

                <!-- Button 1 -->
                <FrameLayout
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_top_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:paddingBottom="56dp"
                        android:text="Information\n    Basket"
                        android:textColor="#FFEB3B"
                        android:fontFamily="monospace"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </FrameLayout>

                <!-- Button 9 -->
                <FrameLayout
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_top_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:paddingBottom="56dp"
                        android:text="Maps"
                        android:textColor="#FFEB3B"
                        android:fontFamily="monospace"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </FrameLayout>

                <!-- Button 2 -->
                <FrameLayout
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:paddingBottom="35dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_top_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:paddingBottom="18dp"
                        android:text="Exhibition \n   Gallery"
                        android:textColor="#FFEB3B"
                        android:fontFamily="monospace"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <!-- Button 3 -->
                <FrameLayout
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_top_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Virtual \n  Ground\n  Station"
                        android:textColor="#FFEB3B"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:paddingBottom="48dp"
                        android:layout_gravity="center|bottom" />
                </FrameLayout>

                <!-- Button 4 -->
                <FrameLayout
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_top_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Space On\nWheels"
                        android:textColor="#FFEB3B"
                        android:textSize="20sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:paddingBottom="58dp"
                        android:layout_gravity="center|bottom" />
                </FrameLayout>

                <!-- Button 5 -->
                <FrameLayout
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_top_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Daily\nGallery"
                        android:textColor="#FFEB3B"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:paddingBottom="57dp"
                        android:layout_gravity="center|bottom" />
                </FrameLayout>

                <!-- Button 6 -->
                <FrameLayout
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_top_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Important\n Events"
                        android:textColor="#FFEB3B"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:paddingBottom="60dp"
                        android:layout_gravity="center|bottom" />
                </FrameLayout>

                <!-- Button 7 -->
                <FrameLayout
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_top_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Print\nMedia"
                        android:textColor="#FFEB3B"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:paddingBottom="54dp"
                        android:layout_gravity="center|bottom" />
                </FrameLayout>

                <!-- Button 8 -->
                <FrameLayout
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_top_corners">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FeedBack"
                        android:textColor="#FFEB3B"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:paddingBottom="55dp"
                        android:layout_gravity="center|bottom" />
                </FrameLayout>

            </GridLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
